<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".views.activities.TwoSidesOfBrain"
  >


        <TextView

            android:id="@+id/chooseASkill"
            android:text="@string/choose_a_side"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            style="@style/MainButtonsStyle"
            android:padding="15dp"
            android:gravity="center"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="8dp"
                    android:backgroundTint="@color/colorAccent"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:background="@color/colorAccent"
                    android:layout_margin="5dp">

                        <ImageButton
                            android:id="@+id/btnLeftBrain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/left_brain"
                            android:scaleType="centerCrop"
                            android:layout_margin="10dp"
                            android:background="@color/colorAccent"/>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="8dp"
                    android:backgroundTint="@color/colorAccent"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:background="@color/colorAccent"
                    android:layout_margin="5dp">

                        <ImageButton
                            android:id="@+id/btnRightBrain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/right_brain"
                            android:scaleType="centerCrop"
                            android:layout_margin="10dp"
                            android:background="@color/colorAccent"/>
                </android.support.v7.widget.CardView>


        </LinearLayout>













</LinearLayout>